<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_home"
    tools:context=".BookSeatActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Your Seat"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Form -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Name -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:textColorHint="#757575"

            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_user2"
            android:drawablePadding="10dp"
            android:drawableTint="#757575"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:paddingStart="48dp"
            android:paddingEnd="12dp" />

            <!-- Phone -->
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:textColorHint="#757575"

            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="phone"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:drawableTint="#757575"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:paddingStart="48dp"
            android:paddingEnd="12dp" />

            <!-- Date -->
            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Booking Date"
                android:textColorHint="#757575"

            android:textColor="#000000"
            android:textSize="16sp"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="10dp"
            android:drawableTint="#757575"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:paddingStart="48dp"
            android:paddingEnd="12dp" />

            <!-- Time -->
            <EditText
                android:id="@+id/etTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Booking Time"
                android:textColorHint="#757575"

            android:textColor="#000000"
            android:textSize="16sp"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="10dp"
            android:drawableTint="#757575"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:paddingStart="48dp"
            android:paddingEnd="12dp" />

            <!-- Number of Seats -->
            <EditText
                android:id="@+id/etSeats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Seats"
                android:textColorHint="#757575"

            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_seat"
            android:drawablePadding="10dp"
            android:drawableTint="#757575"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:paddingStart="48dp"
            android:paddingEnd="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Submit Button -->
    <!-- Submit Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FF6B6B"
        app:layout_constraintTop_toBottomOf="@id/formCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Confirm Booking"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>